{% if products is defined %}
    {% set element_start = '<a class="Card_info" href="'~path('product_show', {id: product.id}) ~'">' %}
    {% set element_end = '</a>' %}
    {% set is_only = false %}
    {% set class_if_not_only = '' %}
{% else %}
    {% set element_start = '<div class="Card_info">' %}
    {% set element_end = '</div>' %}
    {% set is_only = ' -only' %}
    {% set class_if_not_only = true %}
{% endif %}

<div class="Card{{ class_if_not_only }}">
    <div class="Card_image">
        <img class="Image" src="/images/{{ product.imageName }}">
    </div>
    {{ element_start|raw }}
        <p class="Card_title">
            {{ product.name }}
        </p>
        <div class="Card_description">
            {{ product.description }}
        </div>
        <p class="Card_price">
            {{ product.price|price }}
        </p>
    {% if is_only %}
        <div>
            <a href="">Actions</a>
        </div>
    {% endif %}
    {{ element_end|raw }}
</div>
